@model UserModel;
<div class="pagetitle">
    <h1>User Forms</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">User</li>
            <li class="breadcrumb-item active">Add Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Add/Edit</h5>
                    <!-- Form -->
                    <form class="row g-3" asp-controller="User" asp-action="UserSave" method="post">
                        <input type="hidden" asp-for="UserID" />
                        <div class="col-md-6">
                            <input type="text" asp-for="UserName" class="form-control  border border-black" placeholder="User Name">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="col-md-6">
                            <input type="tel" class="form-control border border-black" asp-for="MobileNo" placeholder="Mobile No">
                            <span class="text-danger" asp-validation-for="MobileNo"></span>
                        </div>
                        <div class="col-md-6">
                            <input type="email" class="form-control  border border-black" asp-for="EmailID" placeholder="Email ID">
                            <span class="text-danger" asp-validation-for="EmailID"></span>
                        </div>
                        <div class="text-start">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a asp-action="UserList" asp-controller="User" class="btn btn-danger">Cancel</a>
                        </div>
                    </form><!-- End No Labels Form -->
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <a href="~/lib/jquery/dist/jquery.min.map">~/lib/jquery/dist/jquery.min.map</a>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}