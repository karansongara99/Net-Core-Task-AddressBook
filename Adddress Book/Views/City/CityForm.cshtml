@using System.Data
@model CityModel

<div class="pagetitle">
    <h1>City Forms</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">City</li>
            <li class="breadcrumb-item active">Add Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">City Add/Edit</h5>
                    <!-- Form -->
                    <form class="row g-3" asp-controller="City" asp-action="SaveCity" method="post">
                        <div class="col-md-6">
                            <select class="form-select border border-black" asp-for="CountryID" aria-label="Default select example" asp-items="@(new SelectList(ViewBag.CountryList, "CountryID", "CountryName"))">
                               <option>Select Country</option>
                            </select>
                            <span asp-validation-for="CountryID" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <select class="form-select border border-black" asp-for="StateID" aria-label="Default select example" asp-items="@(new SelectList(ViewBag.StateList, "StateID", "StateName"))">
                               <option>Select State</option>
                            </select>
                            <span asp-validation-for="StateID"></span>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="CityName" type="text" class="form-control  border border-black" placeholder="City Name">
                            <span class="text-danger" asp-validation-for="CityName"></span>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="STDCode" type="number" class="form-control  border border-black" placeholder="STD Code">
                            <span class="text-danger" asp-validation-for="STDCode"></span>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="PinCode" type="number" class="form-control  border border-black" placeholder="Pin Code">
                            <span class="text-danger" asp-validation-for="PinCode"></span>
                        </div>
                        <div class="text-start">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a asp-action="CityList" asp-controller="City" class="btn btn-danger">Cancel</a>
                        </div>
                    </form><!-- End No Labels Form -->
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <a href="~/lib/jquery/dist/jquery.min.map">~/lib/jquery/dist/jquery.min.map</a>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

